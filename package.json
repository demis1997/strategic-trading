{
    "name": "@protofire/ygro-protocol",
    "version": "1.0.0",
    "engines": {
        "node": ">=10.4.0"
    },
    "description": "YGRO - Protocol",
    "type": "commonjs",
    "main": "build/scripts/index.js",
    "types": "build/scripts/index.d.ts",
    "keywords": [
        "solidity",
        "template",
        "contracts",
        "protocol",
        "blockchain",
        "ethereum",
        "web3",
        "foundry",
        "forge",
        "hardhat",
        "ethers",
        "typescript"
    ],
    "author": "DB",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/protofire/ygro-protocol.git"
    },
    "files": [
        "/deployments.json",
        "/artifacts/contracts/**/*.json",
        "!/artifacts/contracts/test/**/*.json",
        "/build/**",
        "/contracts/**/*.sol"
    ],
    "scripts": {
        "prepare": "npx hardhat compile --quiet && npm run abi-types && tsc ; ",
        "abi-types": "npx typechain --target ethers-v6 './test/_helpers/_abis/*.json'",
        "compile-all": "npx hardhat compile; forge compile; npm run abi-types",
        "compilehh": "npx hardhat compile; npm run abi-types",
        "clean": "forge clean; npx hardhat clean",
        "remove": "rm -rf coverage.json artifacts/ build/ cache/ coverage/ types/",
        "coverage": "npx hardhat coverage --solcoverjs ./.solcover.js --testfiles 'test/unitest/*.ts'",
        "deploy": "npx hardhat run scripts/console.ts",
        "doc": "npx hardhat dodoc",
        "lint": "npx prettier --config ./.prettierrc.json --check . && npx eslint --no-error-on-unmatched-pattern \"**/*.{ts,tsx}\"",
        "pretty": "npx prettier --config ./.prettierrc.json --write . && npx eslint --no-error-on-unmatched-pattern --fix .",
        "size": "npx hardhat size-contracts",
        "test": "npm run compilehh && npx hardhat test test/unitest/*.ts && npx hardhat test test/unitest/**/*.ts --network hardhat",
        "integration-test": "npm run compilehh && npx hardhat test test/live-test/**/*.ts --network hardhat",
        "typechain": "npx hardhat typechain",
        "update": "forge update",
        "slither": "docker run -it -v $(pwd)/contracts:/home/ethsec/project trailofbits/eth-security-toolbox",
        "slither-default": "docker run -v $(pwd):/home/ethsec/project trailofbits/eth-security-toolbox /bin/bash -c \"cd /home/ethsec/project/contracts && slither . --config-file /home/ethsec/project/.slither.config.json\""
    },
    "devDependencies": {
        "@chainlink/contracts": "^1.1.1",
        "@nomicfoundation/hardhat-ethers": "^3.0.5",
        "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
        "@nomicfoundation/hardhat-toolbox": "^5.0.0",
        "@openzeppelin/contracts-upgradeable": "^5.0.2",
        "@openzeppelin/hardhat-upgrades": "^3.0.5",
        "@primitivefi/hardhat-dodoc": "^0.2.3",
        "@typechain/ethers-v6": "^0.5.1",
        "@types/chai": "^4.3.14",
        "@types/fs-extra": "^11.0.4",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.12.7",
        "@types/readline-sync": "^1.4.8",
        "@types/sinon-chai": "^3.2.12",
        "@typescript-eslint/eslint-plugin": "^7.7.0",
        "@typescript-eslint/parser": "^7.7.0",
        "@uniswap/v3-core": "^1.0.1",
        "@uniswap/v3-periphery": "^1.4.4",
        "dotenv": "^16.4.5",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "ethers": "^6.12.0",
        "glob": "^7.2.0",
        "hardhat": "^2.22.2",
        "hardhat-contract-sizer": "^2.10.0",
        "minimatch": "^5.1.2",
        "mocha": "^10.4.0",
        "prettier": "^3.2.5",
        "prettier-plugin-solidity": "^1.3.1",
        "readline-sync": "^1.4.10",
        "solhint": "^4.5.4",
        "toml": "^3.0.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "axios": "^1.7.3",
        "fs-extra": "^11.2.0"
    }
}
